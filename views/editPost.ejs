<h1>Edit Post</h1>
<form method="PUT" action="/posts/:id">
				<label for="title">Title</label>
				<input 
					type="text" 
					id="title" 
					name="title"
					placeholder="Title"
				/>
				<label for="body">Post</label>
				<input 
					type="text"
					id="body" 
					name="body"
					placeholder="Post"
                />
    <button type="submit">Save</button>      
</form>