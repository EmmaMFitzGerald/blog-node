<body>
    <h1>Welcome to Emma's Blog</h1>
    <h1>Add Post</h1>
    <form method="POST" action="/posts" id="blogForm">
                    <label for="title">Title</label>
                    <input 
                        type="text" 
                        id="title" 
                        name="title"
                        placeholder="Title"
                    />
                    <label for="body">Post</label>
                    <input 
                        type="text"
                        id="body" 
                        name="body"
                        placeholder="Post"
                    />
        <button type="submit" class="btn">Save</button>      
    </form>
    <ul>
        <% for (let i =1 ; i < posts.length;  i++ ) { %>
            <li><a href="/posts/<%=posts[i].id%>"><%= posts[i].title %></a> </li>
            <%= posts[i].id %> 
        <form method="POST" action="/posts/<%=posts[i].id%>?_method=DELETE">
            <button type="submit" class="btn">Delete</button></form>
        <% } %>
    </ul>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
